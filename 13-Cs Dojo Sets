# Set = a data type that stores a set of things
# A set of unique items
a = set()
a.add(1)
a.add(2)
print(a)
a.add(2)
# rejects a repeated/non-unique number
print(a)

for elements in a:
    print(elements)

# Use sets to remove duplicates from a given list
new_list = [1,1,2,4,2]
new_set = set()
for nos in new_list:
    new_set.add(nos)
print(new_set)
newest_list = []
for items in new_set:
    newest_list.append(items)
print(newest_list)

# adding various data types to a set
b = set()
b.add("Ian")
b.add("Macharia")
b.add(100)
print(b)
#{'Macharia', 100, 'Ian'} - order in which elements were added not preserved
# Exercise problem
# find the sum of uniques items in a list
given_list = [1,3,4,1,3]
d = set()
e = []
total_unique = 0
for items in given_list:
    d.add(items)
for elements in d:
    e.append(elements)
    total_unique = total_unique + elements
print(e)
print(total_unique)
    



















